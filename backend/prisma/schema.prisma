generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  role     Role[]   @relation("UserRoles")
  profile  Profile? @relation(fields: [profileId], references: [id])
  profileId Int?    // Optional field to link to profile
}

model Profile {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  department String
  profilePic String?
  userId     Int      @unique
  user       User     @relation(fields: [userId], references: [id])
  student    Student?
  advisor    Advisor?
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[] @relation("UserRoles")
}

model Advisor {
  id            Int            @id @default(autoincrement())
  profileId     Int            @unique
  profile       Profile        @relation(fields: [profileId], references: [id])
  students      Student[]      @relation("AdvisorStudents")
  appointments  Appointment[]  @relation("AdvisorAppointments")
  announcements Announcement[] @relation("AdvisorAnnouncements")
  comments      Comment[]      @relation("AdvisorComments")
}

model Student {
  id            Int            @id @default(autoincrement())
  studentId     String         @unique
  profileId     Int            @unique
  profile       Profile        @relation(fields: [profileId], references: [id])
  advisorId     Int?
  advisor       Advisor?       @relation("AdvisorStudents", fields: [advisorId], references: [id])
  comments      Comment[]      @relation("StudentComments")
  appointments  Appointment[]  @relation("StudentAppointments")
}

model Comment {
  id        Int     @id @default(autoincrement())
  content   String
  studentId Int
  advisorId Int
  student   Student @relation(fields: [studentId], references: [id])
  advisor   Advisor @relation(fields: [advisorId], references: [id])
  replies   Reply[] @relation("CommentReplies")
}

model Reply {
  id        Int     @id @default(autoincrement())
  content   String
  commentId Int
  comment   Comment @relation(fields: [commentId], references: [id])
}

model Announcement {
  id        Int     @id @default(autoincrement())
  fileUrl   String
  advisorId Int
  advisor   Advisor @relation(fields: [advisorId], references: [id])
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  REJECTED
}

model Appointment {
  id            Int               @id @default(autoincrement())
  requestedDate DateTime
  scheduledDate DateTime?
  topic         String
  studentId     Int
  advisorId     Int
  status        AppointmentStatus @default(PENDING)
  student       Student           @relation("StudentAppointments", fields: [studentId], references: [id])
  advisor       Advisor           @relation("AdvisorAppointments", fields: [advisorId], references: [id])
}
